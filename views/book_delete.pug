extends layout

block content 

  h1 #{title}: #{book.title}

  if book_instances.length

    p(style= 'color:#ee0c0c') #[strong Delete the following book instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book Instances
      dl
        each book_instance in book_instances
          dt
            a(href=book_instance.url) #{book_instance.imprint}
          dd #{book_instance.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden' name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete